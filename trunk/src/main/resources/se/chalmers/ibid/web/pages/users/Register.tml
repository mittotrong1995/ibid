<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	t:type="Layout" t:pageTitle="title" 
	t:menuExplanation="menuExplanation"
	xml:space="preserve">

	<form t:type="Form" t:id="registrationForm">
	   <t:errors/>
	   <div class="field">        
	        <t:label for="login"/>
	        <span class="entry">    
	            <input t:id="login" t:type="TextField"
				       t:validate="required" 
				       size="16" maxlength="30" />
	        </span>
	   </div>
	    
	   <div class="field">        
	        <t:label for="password"/>
	        <span class="entry">
	            <input t:id="password" t:type="PasswordField"
				       t:validate="required" 
	                   size="16" maxlength="16"/>
	        </span>
	    </div>

	   <div class="field">        
	        <t:label for="retypePassword"/>
	        <span class="entry">
	            <input t:id="retypePassword" t:type="PasswordField"
				       t:validate="required" 
	                   size="16" maxlength="16"/>
	        </span>
	    </div>
	    
	   <div class="field">        
	        <t:label for="name"/>
	        <span class="entry">    
	            <input t:id="name" t:type="TextField"
				       t:validate="required" 
				       size="16" maxlength="30" />
	        </span>
	   </div>
	   
	   <div class="field">        
	        <t:label for="surname"/>
	        <span class="entry">    
	            <input t:id="surname" t:type="TextField"
				       t:validate="required" 
				       size="16" maxlength="30" />
	        </span>
	   </div>
	   
	   <div class="field">        
	        <t:label for="email"/>
	        <span class="entry">    
	            <input t:id="email" t:type="TextField"
				       t:validate="required,regexp" 
				       size="16" maxlength="30" />
	        </span>
	   </div>
	    
	    <div class="button">
	        <input type="submit" value="${message:submit}"/>        
	    </div>
	    
	</form>
	
</html>